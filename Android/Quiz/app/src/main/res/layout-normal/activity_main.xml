<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rel_lay"
    tools:context=".MainActivity"
    >



    <LinearLayout
        android:id="@+id/container_strings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <TextView

            android:id="@+id/str_football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ruslan_display"
            android:lineSpacingExtra="8sp"
            android:text="@string/football_quiz"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:typeface="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ruslan_display"
            android:lineSpacingExtra="8sp"
            android:text="@string/football_quiz_2"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:typeface="normal" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_center" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/circle_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circle" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/container_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/play_btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/union_pressed"
            android:fontFamily="@font/jura_semibold"
            android:gravity="center"
            android:text="@string/Play"
            android:textAllCaps="false"
            android:textSize="50sp"
            app:backgroundTint="@null" />

    </LinearLayout>


</RelativeLayout>