<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/rel_lay">

    <FrameLayout
        android:id="@+id/linear_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-9dp"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="-12dp"
        >

        <TextView
            android:id="@+id/back_text"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_back_cups"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            >

            <View
                android:layout_width="23dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:background="@drawable/arrow"
                android:rotation="144.32"
                android:layout_marginEnd="4dp" />

            <View
                android:layout_width="35.5dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/arrow" />

            <View
                android:layout_width="23dp"
                android:layout_height="10dp"
                android:layout_marginRight="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/arrow"
                android:rotation="-144.32"
                android:layout_marginEnd="4dp" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/linear_cups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        tools:ignore="RelativeOverlap">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/str_football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jura_semibold"
            android:lineSpacingExtra="8sp"
            android:text="@string/number_of_questions_det"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="80sp"
            android:typeface="normal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            />

        <View

            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#FFFFFF" />

    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_semibold"
                android:lineSpacingExtra="8sp"
                android:text="@string/Champions_league"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="80sp"
                android:typeface="normal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/first_quantity"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_semibold"
                android:lineSpacingExtra="8sp"
                android:text="@string/ninety"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="140sp"
                android:typeface="normal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/second_theme"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_semibold"
                android:lineSpacingExtra="8sp"
                android:text="@string/England"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="80sp"
                android:typeface="normal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/second_quantity"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_semibold"
                android:lineSpacingExtra="8sp"
                android:text="@string/ninety"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="140sp"
                android:typeface="normal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>